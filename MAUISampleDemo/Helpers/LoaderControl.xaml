<?xml version="1.0" encoding="utf-8" ?>
<StackLayout
    x:Class="MAUISampleDemo.Helpers.LoaderControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this">

    <ActivityIndicator IsRunning="True" Color="{Binding Source={x:Reference this}, Path=IndicatorColor}" />

    <Label
        FontSize="20"
        HorizontalTextAlignment="Center"
        Text="{Binding Source={x:Reference this}, Path=LoaderText}"
        TextColor="{Binding Source={x:Reference this}, Path=LoadingTextColor}" />
</StackLayout>
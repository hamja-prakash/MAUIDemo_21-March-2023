<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUISampleDemo.View.ProgressBarDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maui="clr-namespace:MAUISampleDemo.Helpers"
    Title="ProgressBar Demo"
    Shell.NavBarIsVisible="True">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Center">

        <maui:ProgressBar
            HeightRequest="5"
            Progress="0.4"
            ProgressColor="Orange"
            WidthRequest="250" />

        <maui:ProgressBar
            HeightRequest="5"
            Progress="0.7"
            ProgressColor="SkyBlue"
            WidthRequest="250" />

    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUISampleDemo.View.Validations.Validation2"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Validation2">
    <StackLayout Padding="16">

        <Entry
            x:Name="nameEntry"
            Placeholder="Name"
            Text="{Binding User.Value.Name, Mode=TwoWay}"
            TextColor="Black" />

        <Entry
            x:Name="lastnameEntry"
            Placeholder="LastName"
            Text="{Binding User.Value.LastName, Mode=TwoWay}"
            TextColor="Black" />

        <Entry
            x:Name="emailEntry"
            Placeholder="Email"
            Text="{Binding User.Value.Email, Mode=TwoWay}"
            TextColor="Black" />
        <!--<Label Text="{Binding User.Error}" TextColor="Red" HorizontalTextAlignment="Center" />-->

        <Button
            BackgroundColor="Blue"
            Clicked="Button_Clicked"
            Text="Validate"
            TextColor="White" />

    </StackLayout>
</ContentPage>
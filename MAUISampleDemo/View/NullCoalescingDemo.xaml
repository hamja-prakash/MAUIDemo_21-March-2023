<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUISampleDemo.View.NullCoalescingDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="NullCoalescingDemo">
    <VerticalStackLayout
        Margin="0,30,0,0"
        HorizontalOptions="CenterAndExpand"
        Spacing="10"
        VerticalOptions="FillAndExpand">

        <Label
            x:Name="LblResult"
            FontSize="18"
            HorizontalOptions="Center" />

        <Button
            x:Name="btnOutput"
            Clicked="btnOutput_Clicked"
            Text="Show Output" />

        <Label
            x:Name="LblVMResult"
            FontSize="18"
            HorizontalOptions="Center" />

        <Button
            x:Name="btnVMOutput"
            Clicked="btnVMOutput_Clicked"
            Text="Show VM Output" />

    </VerticalStackLayout>
</ContentPage>
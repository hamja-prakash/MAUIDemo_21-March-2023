<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUISampleDemo.View.ContactShareDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ContactShareDemo">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Button
                    BackgroundColor="Transparent"
                    Command="{Binding ShareCommand}"
                    HeightRequest="50"
                    HorizontalOptions="EndAndExpand"
                    Text="Share"
                    TextColor="Black" />
                <Grid
                    Padding="40"
                    BackgroundColor="LightBlue"
                    RowDefinitions="Auto,Auto,Auto,Auto">
                    <Border
                        HeightRequest="150"
                        StrokeShape="RoundRectangle 75"
                        WidthRequest="150">
                        <Image Aspect="AspectFill" Source="{Binding Photo}" />
                    </Border>

                    <Label
                        Grid.Row="1"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{Binding FormattedName}" />
                    <Label
                        Grid.Row="2"
                        FontSize="Medium"
                        HorizontalOptions="Center"
                        Text="{Binding OrganizationTitle}" />
                    <Label
                        Grid.Row="3"
                        FontSize="Medium"
                        HorizontalOptions="Center"
                        Text="{Binding Organization}" />
                </Grid>

                <StackLayout Padding="10" Spacing="20">
                    <Label FontSize="Small">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="ðŸ“ž " />
                                <Span Text="{Binding Phone1}" />
                                <Span Text="(" />
                                <Span Text="{Binding Phone1Type}" />
                                <Span Text=")" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        Color="LightGray" />

                    <Label FontSize="Small">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="âœ‰ " />
                                <Span Text="{Binding Email}" />
                                <Span Text="(" />
                                <Span Text="{Binding Phone1Type}" />
                                <Span Text=")" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        Color="LightGray" />

                    <Label FontSize="Small">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="ðŸ“" />
                                <Span Text="{Binding Address}" />
                                <Span Text="(" />
                                <Span Text="{Binding AddressType}" />
                                <Span Text=")" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
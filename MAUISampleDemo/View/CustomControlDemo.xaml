<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUISampleDemo.View.CustomControlDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Control="clr-namespace:MAUISampleDemo.Helpers"
    Title="CustomControlDemo">
    <VerticalStackLayout Margin="0,20">
        <Control:LoaderControl />

        <Control:LoaderControl
            Margin="0,20,0,0"
            IndicatorColor="Red"
            LoaderText="Loading.."
            LoadingTextColor="Red" />

        <Control:LoaderControl
            Margin="0,20,0,0"
            IndicatorColor="Green"
            LoaderText="Downloading.."
            LoadingTextColor="Green" />

    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUISampleDemo.View.RatingDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MAUISampleDemo.Shared;assembly=MAUISampleDemo.Shared"
    Title="RatingDemo">
    <VerticalStackLayout
        Padding="36,16"
        Spacing="12"
        VerticalOptions="Start">

        <Label FontSize="Large" Text="Default Star Shape" />

        <Label
            Margin="0,8,0,0"
            FontSize="Micro"
            Text="4.3 out of 5" />
        <controls:RatingView
            HorizontalOptions="Start"
            ItemCount="5"
            ItemSize="16"
            ItemSpacing="6"
            RatedFillColor="Yellow"
            StrokeColor="Black"
            StrokeWidth="1"
            UnRatedFillColor="LightGrey"
            Value="4.3" />

        <Label FontSize="Micro" Text="4 out of 5" />
        <controls:RatingView
            HorizontalOptions="Start"
            ItemCount="5"
            ItemSize="16"
            ItemSpacing="6"

            StrokeColor="Black"
            StrokeWidth="1"
            UnRatedFillColor="LightGrey"
            Value="4" />

        <Label FontSize="Micro" Text="7.6 out of 10" />
        <controls:RatingView
            HorizontalOptions="Start"
            ItemCount="10"
            ItemSize="20"
            ItemSpacing="6"
            RatedFillColor="Yellow"
            StrokeColor="LightYellow"
            StrokeWidth="1"
            UnRatedFillColor="LightGrey"
            Value="7.6" />

        <Label FontSize="Micro" Text="2.7 out of 5" />
        <controls:RatingView
            HorizontalOptions="Start"
            ItemCount="5"
            ItemSize="32"
            ItemSpacing="12"
            RatedFillColor="#336699"
            StrokeColor="Red"
            StrokeWidth="4"
            UnRatedFillColor="LightGrey"
            Value="2.7" />

        <Label
            Margin="0,16,0,0"
            FontSize="Large"
            Text="Custom Star Shape - Diamond" />

        <Label
            Margin="0,8,0,0"
            FontSize="Micro"
            Text="2.7 out of 5" />
        <controls:RatingView
            HorizontalOptions="Start"
            ItemCount="5"
            ItemSize="32"
            ItemSpacing="12"
            RatedFillColor="Yellow"
            ShapePath="M5.93882 13.9336L23.0362 4.53011C23.6363 4.20002 24.3637 4.20002 24.9638 4.53011L42.0612 13.9336C43.0988 14.5043 43.4161 15.8467 42.7438 16.8215L25.6464 41.6127C24.8515 42.7654 23.1485 42.7654 22.3536 41.6127L5.25624 16.8215C4.58391 15.8467 4.90118 14.5044 5.93882 13.9336Z"
            StrokeColor="Blue"
            StrokeWidth="3"
            UnRatedFillColor="LightGrey"
            Value="2.7" />


    </VerticalStackLayout>
</ContentPage>
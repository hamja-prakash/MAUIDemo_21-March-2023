<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUISampleDemo.View.BottomSheetMainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BottomSheetMainPage">
    <VerticalStackLayout Margin="20" Spacing="20">
        <Button
            x:Name="btnSimpleSheet"
            Padding="5,0"
            Clicked="btnSimpleSheet_Clicked"
            FontAttributes="Bold"
            HeightRequest="40"
            Text="Simple Sheet" />
        <Button
            x:Name="btnwithHandle"
            Padding="5,0"
            Clicked="btnwithHandle_Clicked"
            FontAttributes="Bold"
            HeightRequest="40"
            Text="With handle" />
        <Button
            x:Name="btnSpecifyHeight"
            Padding="5,0"
            Clicked="btnSpecifyHeight_Clicked"
            FontAttributes="Bold"
            HeightRequest="40"
            Text="Specify a height" />
        <Button
            x:Name="btnBackgroundSheet"
            Padding="5,0"
            Clicked="btnBackgroundSheet_Clicked"
            FontAttributes="Bold"
            HeightRequest="40"
            Text="BackgroundSheet" />
        <Button
            x:Name="btnDismiss"
            Padding="5,0"
            Clicked="btnDismiss_Clicked"
            FontAttributes="Bold"
            HeightRequest="40"
            Text="Dismiss" />
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUISampleDemo.View.Stepper.StepperDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StepperDemo">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Button
                x:Name="btnVertical"
                Clicked="btnVertical_Clicked"
                Text="Vertical Stepper" />
            <Button
                x:Name="btnHorizontal"
                Clicked="btnHorizontal_Clicked"
                Text="Horizontal Stepper" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
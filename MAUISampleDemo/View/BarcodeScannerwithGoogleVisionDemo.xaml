<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUISampleDemo.View.BarcodeScannerwithGoogleVisionDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:gv="clr-namespace:BarcodeScanner.Mobile;assembly=BarcodeScanner.Mobile.Maui"
    Title="BarcodeScannerwithGoogleVisionDemo">
    <VerticalStackLayout>
        <gv:CameraView
            x:Name="CameraView"
            HorizontalOptions="FillAndExpand"
            OnDetected="CameraView_OnDetected"
            ScanInterval="100"
            TorchOn="False"
            VerticalOptions="FillAndExpand"
            VibrationOnDetected="False" />
    </VerticalStackLayout>
</ContentPage>